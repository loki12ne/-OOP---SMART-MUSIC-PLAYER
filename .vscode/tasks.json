{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-std=c++2b",
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",
                "./Models/*.cpp",
                "./Services/*.cpp",
                "./Services/Bussiness/*.cpp",
                "./Services/DataAccess/*.cpp",
            //    "./Services/UI/Factory.cpp",
                "-o",
                "${fileDirname}/debug/program",
                "-pthread"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}